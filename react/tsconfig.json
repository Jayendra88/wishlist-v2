{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "noEmitOnError": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest", "react-table"],
    "lib": ["es2019", "es5", "es6", "dom", "dom.iterable"],

    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "allowJs": true,
    "paths": {
      "ariakit-utils/ts/types": ["./typings/ariakit-utils/ts/types.d.ts"],
      "ariakit-utils/types": ["./typings/ariakit-utils/types.d.ts"]
    },
    "baseUrl": "."
  },

  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts"]
}
